@using aznews.Areas.Admin.Models
@model HocPhan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Thêm học phần";
}
<div class="card shadow-sm">
    <div class="card-body p-4">
        <h4 class="fw-bold text-primary mb-3">Thêm học phần</h4>

        <form asp-action="Create" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-8">
                <label asp-for="TenHP" class="form-label">Tên học phần</label>
                <input asp-for="TenHP" class="form-control" />
                <span asp-validation-for="TenHP" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="SoTinChi" class="form-label">Số tín chỉ</label>
                <input asp-for="SoTinChi" class="form-control" type="number" min="1" />
                <span asp-validation-for="SoTinChi" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button class="btn btn-primary"><i class="bi bi-check2 me-1"></i>Lưu</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Huỷ</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
