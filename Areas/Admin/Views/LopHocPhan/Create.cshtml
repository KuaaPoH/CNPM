@using Microsoft.AspNetCore.Mvc.Rendering
@model aznews.Areas.Admin.Models.LopHocPhan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm lớp học phần";
}

<section class="section">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="fw-bold text-primary mb-0 text-uppercase">Thêm lớp học phần</h4>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-short"></i> Quay lại
                        </a>
                    </div>

                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="row g-3">

                            <!-- Học phần -->
                            <div class="col-md-6">
                                <label class="form-label">Học phần</label>
                                <select class="form-select" asp-for="MaHP" asp-items="ViewBag.HocPhanList" required>
                                    <option value="">-- Chọn học phần --</option>
                                </select>
                                <span asp-validation-for="MaHP" class="text-danger"></span>
                            </div>

                            <!-- Giảng viên -->
                            <div class="col-md-6">
                                <label class="form-label">Giảng viên</label>
                                <select class="form-select" asp-for="MaGiangVien" asp-items="ViewBag.GiangVienList" required>
                                    <option value="">-- Chọn giảng viên --</option>
                                </select>
                                <span asp-validation-for="MaGiangVien" class="text-danger"></span>
                            </div>

                            <!-- Học kỳ -->
                            <div class="col-md-4">
                                <label class="form-label">Học kỳ</label>
                                <select class="form-select" asp-for="HocKy" asp-items="ViewBag.HocKyList" required>
                                    <option value="">-- Chọn học kỳ --</option>
                                </select>
                                <span asp-validation-for="HocKy" class="text-danger"></span>
                            </div>

                            <!-- Năm học -->
                            <div class="col-md-4">
                                <label class="form-label">Năm học</label>
                                <select class="form-select" asp-for="NamHoc" asp-items="ViewBag.NamHocList" required>
                                    <option value="">-- Chọn năm học --</option>
                                </select>
                                <span asp-validation-for="NamHoc" class="text-danger"></span>
                            </div>

                            <!-- Trạng thái -->
                            <div class="col-md-4 d-flex align-items-center">
                                <div class="form-check mt-4">
                                    <input class="form-check-input" asp-for="TrangThai" type="checkbox" />
                                    <label class="form-check-label" for="TrangThai">Hiển thị</label>
                                </div>
                            </div>

                            <div class="col-12"><hr /></div>

                            <!-- Loại lớp -->
                            <div class="col-md-4">
                                <label class="form-label">Loại lớp</label>
                                <select class="form-select" asp-for="LoaiLop" asp-items="ViewBag.LoaiList" id="LoaiLopSelect" required>
                                    <option value="">-- Chọn loại lớp --</option>
                                </select>
                                <span class="form-text" id="LoaiHint">LT = Lý thuyết, TH = Thực hành, DA = Đồ án</span>
                                <span asp-validation-for="LoaiLop" class="text-danger"></span>
                            </div>

                            <!-- Số lớp cần tạo -->
                            <div class="col-md-4">
                                <label class="form-label">Số lớp cần tạo</label>
                                <input type="number" class="form-control" name="soLop" id="SoLop" value="1" min="1" step="1" required />
                                <div class="form-text">Ví dụ: nhập 3 sẽ tạo <em>LT1, LT2, LT3</em> (tuỳ loại).</div>
                            </div>

                            <!-- Tên nhóm (khi tạo 1 lớp) -->
                            <div class="col-md-4">
                                <label class="form-label">Tên nhóm</label>
                                <input asp-for="TenNhom" class="form-control" id="TenNhomInput" placeholder="VD: LT1 / TH1 / DA1" />
                                <span class="form-text">Nếu tạo nhiều lớp, hệ thống sẽ tự đánh số theo loại.</span>
                                <span asp-validation-for="TenNhom" class="text-danger"></span>
                            </div>

                            <!-- Lớp cha (tuỳ chọn) -->
                            <div class="col-md-6">
                                <label class="form-label">Lớp cha (nếu có)</label>
                                <select class="form-select" asp-for="MaLopCha" asp-items="ViewBag.LopChaList">
                                    <option value="">-- Không chọn --</option>
                                </select>
                                <span asp-validation-for="MaLopCha" class="text-danger"></span>
                            </div>

                            <!-- Ghi chú (nếu bạn có trường này trong model thì mở ra) -->
                            @*<div class="col-md-6">
                                <label class="form-label">Ghi chú</label>
                                <input asp-for="GhiChu" class="form-control" />
                                <span asp-validation-for="GhiChu" class="text-danger"></span>
                            </div>*@

                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check2-circle me-1"></i> Tạo lớp
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Hủy
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const loaiSel = document.getElementById('LoaiLopSelect');
            const soLopInp = document.getElementById('SoLop');
            const tenNhom = document.getElementById('TenNhomInput');

            function prefixFor(val) {
                // giá trị LoaiLop là byte (0=LT,1=TH,2=DA) — chỉnh theo enum của bạn
                switch (val) {
                    case "0": return "LT";
                    case "1": return "TH";
                    case "2": return "DA";
                    default: return "N";
                }
            }

            function refreshTenNhom() {
                const px = prefixFor(loaiSel.value);
                if (!tenNhom.value || /^[A-Za-z]*\d*$/.test(tenNhom.value)) {
                    tenNhom.value = px + "1";
                }
            }

            // Khi đổi loại lớp, gợi ý lại tiền tố tên nhóm
            loaiSel?.addEventListener('change', refreshTenNhom);

            // Nếu số lớp > 1 thì chỉ gợi ý, không khóa ô để bạn vẫn có thể sửa
            soLopInp?.addEventListener('input', function () {
                if (parseInt(this.value || "1") > 1) {
                    tenNhom.placeholder = "Sẽ tự đánh số theo loại đã chọn (ví dụ LT1..LTN)";
                } else {
                    tenNhom.placeholder = "VD: LT1 / TH1 / DA1";
                }
            });

            // Khởi tạo
            refreshTenNhom();
        })();
    </script>
}
