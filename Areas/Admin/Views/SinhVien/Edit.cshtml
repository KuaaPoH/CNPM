@model aznews.Areas.Admin.Models.SinhVien
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h4>Sửa sinh viên</h4>
<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaSinhVien" />
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Mã số SV</label>
            <input asp-for="MaSoSV" class="form-control" />
        </div>
        <div class="col-md-8">
            <label class="form-label">Họ tên</label>
            <input asp-for="HoTen" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Giới tính</label>
            <select asp-for="GioiTinh" class="form-select">
                <option value="">--Chọn--</option>
                <option>Nam</option>
                <option>Nữ</option>
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">Ngày sinh</label>
            <input asp-for="NgaySinh" type="date" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Điện thoại</label>
            <input asp-for="SoDienThoai" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Địa chỉ</label>
            <input asp-for="DiaChi" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Mật khẩu</label>
            <input asp-for="MatKhau" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Trạng thái</label>
            <select asp-for="TrangThai" class="form-select">
                <option value="true">Hoạt động</option>
                <option value="false">Khóa</option>
            </select>
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
