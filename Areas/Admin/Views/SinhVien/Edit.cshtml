@using aznews.Areas.Admin.Models
@model SinhVien
@{
    ViewData["Title"] = "Sửa sinh viên";
}

<section class="section">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h4 class="fw-bold text-primary text-uppercase mb-4">Sửa sinh viên</h4>

                    <form asp-area="Admin" asp-controller="SinhVien" asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaSinhVien" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Mã sinh viên</label>
                                <input asp-for="MaSoSV" class="form-control" />
                                <span asp-validation-for="MaSoSV" class="text-danger"></span>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label">Họ tên</label>
                                <input asp-for="HoTen" class="form-control" />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Giới tính</label>
                                <select asp-for="GioiTinh" class="form-select">
                                    <option value="">-- Chọn --</option>
                                    <option>Nam</option>
                                    <option>Nữ</option>
                                    <option>Khác</option>
                                </select>
                                <span asp-validation-for="GioiTinh" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Điện thoại</label>
                                <input asp-for="SoDienThoai" class="form-control" />
                                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 d-flex align-items-center gap-2 mt-2">
                                <input class="form-check-input" type="checkbox" asp-for="TrangThai" />
                                <label class="form-check-label" for="TrangThai">Hiển thị (Hoạt động)</label>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-save me-1"></i> Cập nhật
                            </button>
                            <a asp-area="Admin" asp-controller="SinhVien" asp-action="Index" class="btn btn-outline-secondary">
                                Quay lại
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
