@model aznews.Areas.Admin.Models.SinhVien
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sửa sinh viên";
}

<section class="section">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary fw-bold">
                        <i class="bi bi-person-lines-fill me-2"></i>Sửa thông tin sinh viên
                    </h5>
                    <a asp-area="Admin" asp-controller="SinhVien" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Về danh sách
                    </a>
                </div>

                <div class="card-body p-4">
                    <form asp-area="Admin" asp-controller="SinhVien" asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaSinhVien" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="MaSoSV" class="form-label fw-medium">Mã sinh viên</label>
                                <input asp-for="MaSoSV" class="form-control" />
                                <span asp-validation-for="MaSoSV" class="text-danger"></span>
                            </div>

                            <div class="col-md-8">
                                <label asp-for="HoTen" class="form-label fw-medium">Họ tên</label>
                                <input asp-for="HoTen" class="form-control" />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="NgaySinh" class="form-label fw-medium">Ngày sinh</label>
                                <input asp-for="NgaySinh" type="date" class="form-control" />
                                <span asp-validation-for="NgaySinh" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="GioiTinh" class="form-label fw-medium">Giới tính</label>
                                <select asp-for="GioiTinh" class="form-select">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Nam" selected="@(Model?.GioiTinh == "Nam")">Nam</option>
                                    <option value="Nữ" selected="@(Model?.GioiTinh == "Nữ")">Nữ</option>
                                    <option value="Khác" selected="@(Model?.GioiTinh == "Khác")">Khác</option>
                                </select>
                                <span asp-validation-for="GioiTinh" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="SoDienThoai" class="form-label fw-medium">Số điện thoại</label>
                                <input asp-for="SoDienThoai" class="form-control" />
                                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-medium">Email</label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DiaChi" class="form-label fw-medium">Địa chỉ</label>
                                <input asp-for="DiaChi" class="form-control" />
                                <span asp-validation-for="DiaChi" class="text-danger"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="TrangThai" class="form-label fw-medium d-block">Trạng thái</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="TrangThai" />
                                    <label class="form-check-label" for="TrangThai">Hoạt động</label>
                                </div>
                                <span asp-validation-for="TrangThai" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-area="Admin" asp-controller="SinhVien" asp-action="Index"
                               class="btn btn-outline-secondary">Hủy</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
